<%= form_with(model: user, local: true) do |form| %>
  <%= render 'shared/error_messages' %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :user_name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password, id: :user_password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.text_field :password_confirmation, id: :user_password_confirmation %>
  </div>
  <%if false%>
  <div class="field">
    <% if @user.image? %>
     <%= image_tag @user.image.url if @user.image?%>
    <% end %>
    <%= form.file_field :image %>
  </div>
  <%end%>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
