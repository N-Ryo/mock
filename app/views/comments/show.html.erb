<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="user-show-top">
        <h1 class="hack-title"><%= @hack.category.name %></h1>
        <h2 class="hack-role">-<%= @hack.role.name %>-</h2>
        <%= render 'hacks/follow_form', hack: @hack %>
      </div>
      <div class="row user-stats">
        <div class="col-xs-12">
          <h3 class="inline-block"><i class="fas fa-book"></i> Commentary</h3>
          <h4><%= @comment.content %></h4>
        </div>
        <div class="col-xs-12">
          <h3><i class="fas fa-comments"></i> Discussion</h3>
          <div id="discussion_content">
            <% if @discussions %>
              <%= render partial: 'discussions/discussion', collection: @discussions %>
            <% end %>
          </div>
          <div>
            <%= form_with url: hack_comment_discussions_path(@hack.id, @comment.id), model: @discussion do |form| %>
              <%= form.hidden_field :user_id, value: current_user.id %>
              <%= form.hidden_field :comment_id, value: @comment.id %>
              <%= form.text_field :content, placeholder: "解説に対して意見を投稿してディスカッションしましょう" %>
              <%= form.submit '新規投稿' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>