<%if logged_in?%>

  <%= form_with(url: hack_comments_path(@hack.id), model: Comment.new, local: true) do |form| %>
    <% if @comment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this @comment from being saved:</h2>

        <ul>
        <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.hidden_field :hack_id, value: @hack.id %>
    <p><%= current_user.name %>がコメントしようとしています</p>
    <div class="field comment-feeling">
      <%= form.label :feeling %>
      <%= form.radio_button :feeling, 0, {id: :@comment_feeling, checked: true} %>
        <i class="fas fa-crown fa-lg"></i>
      <%= form.radio_button :feeling, 1, id: :@comment_feeling %>
        <i class="far fa-clock fa-lg"></i>
      <%= form.radio_button :feeling, 2, id: :@comment_feeling %>
        <i class="far fa-flag fa-lg"></i>
      <%= form.radio_button :feeling, 3, id: :@comment_feeling %>
        <i class="fas fa-book-dead fa-lg"></i>
      <%= form.radio_button :feeling, 4, id: :@comment_feeling %>
        <i class="fas fa-baby fa-lg"></i>
      <%= form.radio_button :feeling, 5, id: :@comment_feeling %>
        <i class="fas fa-code fa-lg"></i>
    </div>

    <div class="field">
      <%= form.label :content %>
      <%= form.text_field :content, id: :@comment_content %>
    </div>



    <div class="actions">
      <%= form.submit %>
    </div>
<% end %>
<%else%>
  <p>ログインしようぜ</p>
<%end%>