

<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2 user-form">

      <%= form_with scope: :session ,url: signin_path do |form| %>

        <div class="field form-group">
          <%= form.text_field :email, class: "form-control", id: :user_email, placeholder: :email %>
        </div>


        <div class="field form-group">
          <%= link_to "パスワードを忘れたら？", new_password_reset_path %>
          <%= form.text_field :password, class: "form-control", id: :user_password, placeholder: :password %>
        </div>


        <%= form.label :remember_me, class: "checkbox inline" do %>
          <%= form.check_box :remember_me %>
          <span>ログイン情報保持</span>
        <% end %>

        <div class="actions">
          <%= form.submit 'サインイン', class: "form-control" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
