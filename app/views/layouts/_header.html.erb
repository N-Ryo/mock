<header class="navbar<%if request.path =="/" && !logged_in?%> navbar-fixed-top<%end%>">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to "mock", root_path, id: "logo", class: 'nav-title navbar-fixed-left' %></li>
        <li>
          <div data-toggle="modal" data-target="#myModal" type="button">
            <span class="nav-category">Category <b class="caret"></b></span>
          </div>
        </li>
        <%# ヘッダーの検索エンジン%>
        <li class="nav-list pc-search"><%= text_field_tag :search, params[:search],  class: 'form-control font-awesome fa', placeholder: "\uF002 Search or jump to.." %></li>
        <li class="nav-list sp-search">
          <div data-toggle="modal" data-target="#searchModal" type="button">
            <i class="glyphicon glyphicon-search" aria-hidden="true"></i>
          </div>
        </li>
        <%# ヘッダーの検索エンジン%>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li class="nav-icon"><%= link_to "", "#", class: 'fa fa-bell fa-lg nav-content' %></li>
          <li class="nav-icon"><%= link_to "", new_hack_path, class: 'fa fa-pencil fa-lg nav-content' %></li>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <span class="nav-category dropdown-toggle" data-toggle="dropdown" type="button" aria-expanded="false">
              Account <b class="caret"></b>
            </span>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Sign out", signout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="sp-nav"><%= link_to "", signup_path, class: 'fa fa-user-plus fa-lg nav-content' %></li>
          <li class="sp-nav nav-last-content"><%= link_to "", signin_path, class: 'glyphicon glyphicon-log-in nav-content' %></li>
          <li class="pc-nav"><%= link_to "Sign Up", signup_path, class: 'nav-content' %></li>
          <li class="pc-nav nav-last-content"><%= link_to "Sign In", signin_path, class: 'nav-content' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

<%# ヘッダーのcategoryモーダル%>
<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Category</h4>
      </div>
      <div class="modal-body">
        <ul><p class="modal-category">Language</p>
          <div class="borderLine">
            <li>Ruby</li>
            <li>C</li>
          </div>
        </ul>
      </div>
      <div class="modal-header">
        <h4 class="modal-title">Subcategory</h4>
      </div>
    </div>
  </div>
</div>
<%# ヘッダーのcategoryモーダル%>


<%# ヘッダーのsearchモーダル%>
<div class="modal fade" id="searchModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Search</h4>
      </div>
      <div class="modal-body">
        <%= text_field_tag :search, params[:search], class: 'form-control font-awesome fa', placeholder: "\uF002 Search or jump to.." %>
      </div>
      <div class="modal-footer">
        <div class="recommend">
          人気の検索ワード
        </div>
      </div>
    </div>
  </div>
</div>
<%# ヘッダーのsearchモーダル%>