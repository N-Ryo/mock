<header class="navbar">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to "mock", root_path, id: "logo", class: 'nav-title navbar-fixed-left' %></li>

        <li class="dropdown">
            <div class="dropdown-toggle" data-toggle="dropdown" type="button" aria-expanded="false">
              Languages <b class="caret"></b>
            </div>
          <ul class="dropdown-menu" role="menu">
            <li>Ruby</li>
            <li>C</li>
          </ul>
        </li>
        <li class="nav-list"><%= text_field_tag :search, params[:search], class: 'form-control font-awesome fa', placeholder: "\uF002 Search or jump to..",id: "inlineFormInputGroup2" %></li>

      </ul>
      <ul class="nav navbar-nav navbar-right">
        <%# if logged_in? %>
        <% if false %>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown" type="button" aria-expanded="false">
              Account <b class="caret"></b>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="nav-icon"><i class="fa fa-bell fa-lg"></i></li>
          <li class="nav-icon"><i class="fa fa-pencil fa-lg"></i></li>
          <li><%= link_to "Sign Up", new_user_path, class: 'nav-content' %></li>
          <li class="nav-last-content"><%= link_to "Sign In", signin_path, class: 'nav-content' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
